<div class="container">
  <div class="row justify-content-center">
    <div class="col-xs-12 col-sm-6 col-sm-offset-6">
      <div class="form-login">
        <h2>Nova Aula</h2>
        <%= simple_form_for(@lecture) do |f| %>
        <%= f.error_notification %>
          <div class="form-inputs">
            <%= f.input :title, label: "Título",
                        required: true,
                        autofocus: true %>
            <%= f.input :subject, label: "Disciplina",
                        required: true %>
            <%= f.input :description, label: "Descrição", 
                        required: true %>
            <%= f.label "Duração (h) *" %>
            <br>
            <%= f.number_field :duration,
                        required: true, min: 1 %>
          </div>
          <br>
          <div class="form-actions">
            <%= f.button :submit, "Criar Aula", class: "btn btn-info btn-lg"  %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>