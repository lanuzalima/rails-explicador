    <div class="">
      <%= simple_form_for [@lecture, @availability] do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
          <%= f.input :start_time, label: "Escolha a data que a aula ficará disponível",
                      required: true,
                      autofocus: true %>
      </div>

      <div class="form-actions">
          <%= f.button :submit, "Disponibilizar horário", class: "btn btn-primary btn-sm"  %>
      </div>
      <% end %>
    
    </div>
    